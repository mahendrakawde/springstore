<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/jee
           http://www.springframework.org/schema/jee/spring-jee-2.5.xsd">

	<bean id="orderTrackingService" class="org.springframework.remoting.jaxrpc.JaxRpcPortProxyFactoryBean">
		<property name="namespaceUri" value="urn:OpcOrderTrackingService"/>
		<property name="wsdlDocumentUrl" value="https://localhost:8181/webservice/CreditCardService?WSDL"/>
		<property name="serviceInterface" value="com.sun.j2ee.blueprints.consumerwebsite.actions.OrderTrackingService"/>
		<property name="serviceName" value="CreditCardService"/>
		<property name="portName" value="CreditCardIntfPort"/>
	</bean> 
</beans>