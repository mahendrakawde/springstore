<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.sun.j2ee.blueprints</groupId>
	<artifactId>lodgingsupplier-ear</artifactId>
	<packaging>ear</packaging>
	<version>1.0.6</version>
	<name>Adventure Builder :: Lodging Supplier Enterprise Application</name>
	<url>http://springstore.googlecode.com</url>

	<parent>
		<groupId>com.sun.j2ee.blueprints</groupId>
		<artifactId>lodgingsupplier</artifactId>
		<version>1.0.6</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>com.sun.j2ee.blueprints</groupId>
			<artifactId>lodgingsupplier-ejb</artifactId>
			<version>${pom.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.sun.j2ee.blueprints</groupId>
			<artifactId>servicelocator</artifactId>
			<version>${pom.version}</version>
			<type>jar</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<displayName>LodgingSupplierEAR</displayName>
					<description>Lodging Supplier Module J2EE Blueprint Sample
						Application</description>
					<version>1.4</version>
					<generateApplicationXml>true</generateApplicationXml>
					<finalName>lodgingsupplier</finalName>
					<modules>
						<javaModule>
							<groupId>com.sun.j2ee.blueprints</groupId>
							<artifactId>servicelocator</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<ejbModule>
							<groupId>com.sun.j2ee.blueprints</groupId>
							<artifactId>lodgingsupplier-ejb</artifactId>
							<bundleFileName>lodgingsupplier-ejb.jar</bundleFileName>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
