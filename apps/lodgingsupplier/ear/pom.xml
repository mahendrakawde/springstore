<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>nl.conspect</groupId>
		<artifactId>adventure-parent</artifactId>
		<version>1.0.6-SNAPSHOT</version>
	</parent>
	<artifactId>lodgingsupplier</artifactId>
	<packaging>ear</packaging>
	<name>Lodging Supplier Application</name>
	<dependencies>
		<dependency>
			<groupId>nl.conspect</groupId>
			<artifactId>lodgingsupplier-ejb</artifactId>
			<version>${pom.version}</version>
			<type>ejb</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<displayName>LodgingSupplierEAR</displayName>
					<description>Lodging Supplier Application</description>
					<version>1.4</version>
					<generateApplicationXml>true</generateApplicationXml> 
					<modules>
						<ejbModule>
							<groupId>nl.conspect</groupId>
							<artifactId>lodgingsupplier-ejb</artifactId>							
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.glassfish.maven.plugin</groupId>
				<artifactId>maven-glassfish-plugin</artifactId>
				<configuration>
					<components>
						<component>
							<name>${project.artifactId}</name>
							<artifact>${project.build.directory}/${project.build.finalName}.ear</artifact>
						</component>
					</components>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
