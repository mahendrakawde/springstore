<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.sun.j2ee.blueprints</groupId>
	<artifactId>adventure-ear</artifactId>
	<packaging>ear</packaging>
	<version>1.0.6-SNAPSHOT</version>
	<name>Adventure Builder :: Consumer Website Enterprise Application</name>
    <url>http://springstore.googlecode.com</url>

	<parent>
		<groupId>com.sun.j2ee.blueprints</groupId>
		<artifactId>consumerwebsite</artifactId>
		<version>1.0.6-SNAPSHOT</version>
		<relativePath>../../parent/pom.xml</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<groupId>com.sun.j2ee.blueprints</groupId>
			<artifactId>adventure</artifactId>
			<version>${pom.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<displayName>Consumer Website Enterprise Application</displayName>
					<description>Consumer Website Enterprise Application J2EE Blueprint Sample Application</description>
					<version>1.4</version>
                    <generateApplicationXml>true</generateApplicationXml>
                    <finalName>consumerwebsite</finalName>
					<modules>
						<webModule>
							<groupId>com.sun.j2ee.blueprints</groupId>
							<artifactId>adventure</artifactId>
             				<contextRoot>/ab</contextRoot>
             				<bundleFileName>adventure.war</bundleFileName>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
